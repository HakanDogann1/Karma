@model List<UserListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h5 class="card-title">Üye Listesi</h5>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Telefon Numarası</th>
            <th scope="col">Email</th>
            <th scope="col">Kullanıcı Adı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Name</th>
                <td>@item.Surname</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.UserName</td>
                <td><a asp-area="Admin" asp-controller="AssignRoleToUser" asp-action="Index" asp-route-id="@item.Id" class="btn btn-outline-dark">Rol Ata</a></td>
            </tr>
        }

    </tbody>
</table>
<br />
<a asp-area="Admin" asp-controller="Brand" asp-action="CreateBrand" class="btn btn-outline-dark">Ekle</a>
<!-- End Default Table Example -->

