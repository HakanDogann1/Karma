
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("_HeadPartial.cshtml")
<body>

    <!-- ======= Header ======= -->
    @await Html.PartialAsync("_HeaderPartial.cshtml","AdminLayout")
    <!-- End Header -->
    <!-- ======= Sidebar ======= -->
    @await Html.PartialAsync("_SidebarPartial.cshtml")
   <!-- End Sidebar-->

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Blank Page</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
                    <li class="breadcrumb-item">@TempData["Menu"]</li>
                    <li class="breadcrumb-item active">@TempData["Page"]</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <!--Body-->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@TempData["Title"]</h5>
                            <p>@RenderBody()</p>
                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    @await Html.PartialAsync("_FooterPartial.cshtml")
    <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    @await Html.PartialAsync("_ScriptPartial.cshtml")
</body>

</html>
