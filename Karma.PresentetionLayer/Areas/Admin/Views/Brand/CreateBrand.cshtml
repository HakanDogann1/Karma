@model CreateBrandViewModel
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h5 class="card-title">Marka Ekle</h5>

<!-- General Form Elements -->
<form asp-area="Admin" asp-controller="Brand" asp-action="CreateBrand" method="post">
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Marka</label>
        <div class="col-sm-10">
            <input type="text" asp-for="BrandName" class="form-control">
        </div>

        <span class="text-danger" asp-validation-for="BrandName"></span>
    </div>
    <br />
    <button class="btn btn-outline-dark">Ekle</button>

</form>



<br />
<div asp-validation-summary="All"></div>



