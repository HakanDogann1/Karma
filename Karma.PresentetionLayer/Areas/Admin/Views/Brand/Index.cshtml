@model List<ResultBrandViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Marka Listesi</h5>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Marka</th>
                        <th scope="col">Adet</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.BrandName</td>
                            <td>@item.Piece</td>
                            <td><a asp-area="Admin" asp-controller="Brand" asp-action="UpdateBrand" asp-route-id="@item.Id" class="btn btn-outline-warning">Güncelle</a>
                                <a asp-area="Admin" asp-controller="Brand" asp-action="DeleteBrand" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                            </td>
                        </tr>
                    }
                   
                </tbody>
            </table>
            <br />
            <a asp-area="Admin" asp-controller="Brand" asp-action="CreateBrand" class="btn btn-outline-dark">Ekle</a>
            <!-- End Default Table Example -->
        </div>
    </div>
</div>

