@model UpdateBrandViewModel
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Marka Güncelle</h5>

            <!-- General Form Elements -->
            <form asp-area="Admin" asp-controller="Brand" asp-action="UpdateBrand" method="post">
                <input type="hidden" asp-for="Id"/>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Marka</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="BrandName" class="form-control">
                    </div>
                </div>
                <br />
                <button class="btn btn-outline-dark">Güncelle</button>

            </form>

        </div>
    </div>

</div>


