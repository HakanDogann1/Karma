@model CreateCategoryViewModel
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


            <h5 class="card-title">Kategori Ekle</h5>

            <!-- General Form Elements -->
            <form asp-area="Admin" asp-controller="Category" asp-action="CreateCategory" method="post">
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Kategori</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="CategoryName" class="form-control">
                    </div>
                    <span class="text-danger" asp-validation-for="CategoryName"></span>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Adet</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Piece" class="form-control">
                    </div>
                    <span class="text-danger" asp-validation-for="Piece"></span>
                </div>
                <br />
                <button class="btn btn-outline-dark">Ekle</button>

            </form>



            <br />
            <div asp-validation-summary="ModelOnly"></div>

